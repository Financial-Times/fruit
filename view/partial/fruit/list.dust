
<ol>
	{#fruit}

		<li>
			<h3>
				<a href="/fruit/{id}" class="o-typography-link">{name}</a>
				{?hasRating}
					(rated {rating}/10)
				{:else}
					(no ratings)
				{/hasRating}
			</h3>
			{?description}
				<p>{description}</p>
			{/description}
			{?altNames}
				<p>
					Also known as:
					{#altNames}
						{.}{@sep},{~s}{/sep}
					{/altNames}
				</p>
			{/altNames}
		</li>

	{/fruit}
</ol>
